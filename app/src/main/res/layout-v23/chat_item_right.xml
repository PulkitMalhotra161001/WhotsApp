<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_text_chat_right"
            android:padding="10dp"
            android:text="This is a text message"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="330dp"
            android:maxHeight="400dp"
            android:minWidth="280dp"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_placeholder" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/layout_voice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:gravity="end"
        android:background="@drawable/bg_layout_rounded"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp">
            <ImageButton
                android:id="@+id/btn_play_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_play_circle_24"
                android:clickable="false"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                app:tint="@color/white" />
        </RelativeLayout>
        <View
            android:id="@+id/v_length"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"/>
        <Chronometer
            android:id="@+id/tv_duration"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="1:00"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
